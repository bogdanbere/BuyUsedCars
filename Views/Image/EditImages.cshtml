@using BuyUsedCars.ViewModels
@model EditImagesViewModel

@if(Model is not null){
    <h1 class="text-center mb-3">Edit Images for @(Model.Make + " " + @Model.Model)</h1>
}

<div class="container d-inline-flex justify-content-around">
@if(Model is null){
    <p>There is nothing to edit</p>
}
else{
    @foreach(var image in Model.ImagesList){
    <div style="max-width:450px; height:auto; object-fit:contain; margin-left:5px;">
        <img src=@image.ImageUrl alt=@(Model.Make+Model.Model) class="img-thumbnail" style="height:auto;" />
        <a asp-controller="Image" asp-action="RemoveImage" asp-route-id="@image.Id" type="button" class="btn btn-danger mt-3">Delete Image</a>
    </div>
    }
}
<div class="mt-3"> 
    <a asp-controller="Image" asp-action="AddImage" asp-route-id="@Model.CarId" type="button" class="btn btn-primary text-center">Add New Image</a>
</div>