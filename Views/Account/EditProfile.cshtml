@using BuyUsedCars.ViewModels
@model EditProfileViewModel

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
        <h4>Edit Profile</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="EditProfile">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="Id" id="Id" asp-for="Id"/>
                    <input type="hidden" value="Id"/>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control"/>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input class="btn btn-outline-success float-right" type="submit" value="Edit Profile" />
                    </div>
                </form>
                <a class="btn btn-outline-secondary mt-3" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
            </div>
        </div>
    </div>
</div>